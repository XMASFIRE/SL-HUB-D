repeat task.wait() until game:IsLoaded()

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local Stats = game:GetService("Stats")
local LocalPlayer = Players.LocalPlayer

if getgenv().SL_HUB_AFK then return end
getgenv().SL_HUB_AFK = true

-- VARIABLES
local startTime = tick()
local attempts = 0

-- GUI
local Gui = Instance.new("ScreenGui")
Gui.Name = "SL_HUB_AFK"
Gui.Parent = game.CoreGui

local Frame = Instance.new("Frame", Gui)
Frame.Size = UDim2.new(0,180,0,180)
Frame.Position = UDim2.new(0.85,0,0.1,0)
Frame.BackgroundColor3 = Color3.fromRGB(18,18,18)
Frame.Active = true
Frame.Draggable = true
Instance.new("UICorner", Frame)

local Stroke = Instance.new("UIStroke", Frame)
Stroke.Thickness = 2

-- RGB EFFECT
local hue = 0
RunService.RenderStepped:Connect(function()
	hue = (hue + 0.002) % 1
	Stroke.Color = Color3.fromHSV(hue,1,1)
end)

-- TITLE
local Title = Instance.new("TextLabel", Frame)
Title.Size = UDim2.new(1,0,0,30)
Title.BackgroundTransparency = 1
Title.Text = "SL HUB ANTI AFK"
Title.Font = Enum.Font.GothamBold
Title.TextSize = 14
Title.TextColor3 = Color3.fromRGB(255,255,255)

-- TIME LABEL
local TimeLabel = Instance.new("TextLabel", Frame)
TimeLabel.Position = UDim2.new(0,0,0.25,0)
TimeLabel.Size = UDim2.new(1,0,0,25)
TimeLabel.BackgroundTransparency = 1
TimeLabel.Font = Enum.Font.Gotham
TimeLabel.TextSize = 13
TimeLabel.TextColor3 = Color3.new(1,1,1)
TimeLabel.Text = "Time: 0s"

-- FPS LABEL
local FPSLabel = Instance.new("TextLabel", Frame)
FPSLabel.Position = UDim2.new(0,0,0.45,0)
FPSLabel.Size = UDim2.new(1,0,0,25)
FPSLabel.BackgroundTransparency = 1
FPSLabel.Font = Enum.Font.Gotham
FPSLabel.TextSize = 13
FPSLabel.TextColor3 = Color3.new(1,1,1)
FPSLabel.Text = "FPS: 0"

-- PING LABEL
local PingLabel = Instance.new("TextLabel", Frame)
PingLabel.Position = UDim2.new(0,0,0.65,0)
PingLabel.Size = UDim2.new(1,0,0,25)
PingLabel.BackgroundTransparency = 1
PingLabel.Font = Enum.Font.Gotham
PingLabel.TextSize = 13
PingLabel.TextColor3 = Color3.new(1,1,1)
PingLabel.Text = "Ping: 0 ms"

-- UPDATE LOOP
spawn(function()
	while true do
		task.wait(1)

		-- Time
		local elapsed = math.floor(tick() - startTime)
		TimeLabel.Text = "Time: "..elapsed.."s"

		-- FPS
		local fps = math.floor(1 / RunService.RenderStepped:Wait())
		FPSLabel.Text = "FPS: "..fps

		-- Ping
		local ping = math.floor(Stats.Network.ServerStatsItem["Data Ping"]:GetValue())
		PingLabel.Text = "Ping: "..ping.." ms"
	end
end)

-- ANTI AFK
LocalPlayer.Idled:Connect(function()
	local VirtualUser = game:GetService("VirtualUser")
	VirtualUser:Button2Down(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
	task.wait(1)
	VirtualUser:Button2Up(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
	attempts += 1
end)
